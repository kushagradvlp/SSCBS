<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kushagra.sscbs">

    <application
        android:screenOrientation="portrait"
        android:allowBackup="true"
        android:icon="@drawable/sscbs_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".StudentActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PrincipalsMessageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CoursesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".TimeTableActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>